
\documentclass[12pt]{exam}
\usepackage{amsmath}
\usepackage[margin=1in]{geometry}

\begin{document}

\large Derivative Question Sample

\begin{questions}
\question
\begin{parts}
\part Find the first derivative of the function \( f(x) = 3x^4 - 5x^2 + 6 \).
\vspace{14em}
\part Find the slope of the curve at \( x=2 \).
\vspace{14em}
\part Find the equation of the tangent line to the curve at \( x=2 \).
\vspace{14em}
\part Determine the values of \( x \) where the function has stationary points.
\vspace{14em}
\part Use the second derivative to classify the stationary points as maxima or minima.
\vspace{14em}
\end{parts}

\newpage

\large Optimization Question Sample

\question
\begin{parts}
\part A rectangular box with a square base is to have a volume of 32 m\(^3\). Express the surface area \( A \) as a function of the side length \( x \) of the base.
\vspace{14em}
\part Find the value of \( x \) that minimizes the surface area.
\vspace{14em}
\part Calculate the minimum surface area.
\vspace{14em}
\part Determine the corresponding height of the box.
\vspace{14em}
\end{parts}



\end{questions}

\end{document}
